# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/smart_traffic
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart_traffic

# JWT Configuration
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# RBAC Configuration
# Owner account email (required for owner bootstrap)
OWNER_EMAIL=owner@example.com
# Default password for owner account (change immediately after first login)
OWNER_DEFAULT_PASSWORD=Owner@123456
