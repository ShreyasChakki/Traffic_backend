{
  "name": "smart-traffic-iot-backend",
  "version": "1.0.0",
  "description": "Backend for Smart Traffic IoT Web Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:v2": "node serverV2.js",
    "dev:v2": "nodemon serverV2.js",
    "seed": "node src/utils/seeder.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test:verbose": "jest --verbose --runInBand --detectOpenHandles --forceExit"
  },
  "keywords": [
    "traffic",
    "iot",
    "smart-city",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/utils/seeder.js",
      "!src/services/jobs.js"
    ],
    "testTimeout": 30000
  }
}
